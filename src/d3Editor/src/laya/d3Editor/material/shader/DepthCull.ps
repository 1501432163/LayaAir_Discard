#ifdef FSHIGHPRECISION
	precision highp float;
#else
	precision mediump float;
#endif

uniform vec4 u_Color;

varying vec4 v_Color;
varying float depthValue;


void main()
{
	gl_FragColor.rgb = v_Color.rgb * u_Color.rgb; 
	
	if(gl_FragCoord.z > depthValue){
		gl_FragColor.a = u_Color.a;
	}
	else{
		gl_FragColor.a = 1.0;
	}
}